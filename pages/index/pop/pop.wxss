.bg {
  display: none;
  position: absolute;
  top: 0%;
  left: 0%;
  width: 100%;
  height: 100%;
  background-color: #777;
  z-index: 1001;
  -moz-opacity: 0.7;
  opacity: 0.70;
  filter: alpha(opacity=70);
}

.show {
  display: none;
  text-align: left;
  position: absolute;
  top: 9.1%;
  left: 4%;
  width: 91%;
  height: 90%;
  padding: 0px;
  border: 2px solid #e8e9f7;
  background-color: white;
  z-index: 1002;
  overflow: auto;
}
.txt{
  margin-top: 20rpx;
  font-size: 28rpx;
  color: royalblue
}

.img{
  align-items: up;
  position: absolute;
  top: 0%;
  left: 0%;
  width: 100%;
  height: 100%;
  padding: 0px;
  border: 0px solid #e8e9f7;
}
.img_relative {
  align-items: up;
  position: relative;
  top: 0%;
  left: 10%;
  width: 80%;
  height: 50%;
  padding: 0px;
  border: 0px solid #e8e9f7;
}

